---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import Bc_actualizado from '../../../components/sprint2/BurnDownChartActualizado.astro';
import Entregables from '../../../components/sprint2/EntregablesDelSprint.astro';
import Il_final from '../../../components/sprint2/InpedimentLogFinal.astro';

const modeloCanvasUrl = "/modelo-canvas.pdf"
const actaDeConstitucionUrl = "/acta-de-constitucion.pdf"
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.seccion {
        margin-bottom: 3em;
      }
      h2 {
        color: var(--accent);
        text-align: center;
        margin-bottom: 0.5em;
        margin-top: 0.5em;
      }
      h3 {
        margin-top: 1em;
        margin-bottom: 0.5em;
      }
      h1 {
        text-align: center;
        margin-bottom: 1em;
      }
      .personal-container {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
      }
      .personal {
        width: 500px;
        text-align: center;
        padding: 0 1em 0 1em;
      }
      .image-team-member {
        display: flex;
        justify-content: center;
        margin-top: 1em;
      }
      .stakeholders-container {
        display: flex;
        gap: 2em;
        justify-content: center;
      }
      .stakeholders {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-items: center;
        gap: 5px;
      }
      .stakeholders p,strong {
        margin: 0;
        padding: 0;
      }
      
		</style>
	</head>
	<body>
		<Header />
		<main>
      <h1>Refinamiento del backlog priorizado del producto</h1>
      <div class="seccion">
        <hr>
        <h2>Entradas</h2>
        <hr>
        <ol>
          <li>
            <a href="/avance/formar-al-equipo-scrum#scrum-team">Equipo Scrum</a>
          </li>
          <li>
            <a href="/avance/sprint-2/crear-el-sprint-backlog#sprint-backlog">Backlog Priorizado del producto</a>
          </li>
         
        </ol>
      </div>
      <div class="seccion">
        <hr>
        <h2>Herramientas</h2>
        <hr>
        <h3>Reunión de revisión del Backlog Priorizado del Producto</h3>
        <br>
        <video width={1020} controls>
            <source src="/videos/sprint2_backlog_revision.mp4" type="video/mp4" />
            Tu navegador no soporta la reproducción de videos.
        </video>
        <hr>
        <h2>Salidas</h2>
        <hr>
        <div id="bp_actualizado">
            <h4>Backlog Priorizado actualizado</h4>
            <table border="1">
                <thead>
                    <tr>
                        <th>Épicas</th>
                        <th>Valor</th>
                        <th>Tamaño (esfuerzo)</th>
                        <th>Prioridad (WSJF)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>E01 - Gestión de órdenes</td>
                        <td>75</td>
                        <td>3</td>
                        <td>25</td>
                    </tr>
                    <tr>
                        <td>E02 - Desarrollo de la landing page</td>
                        <td>60</td>
                        <td>3</td>
                        <td>20</td>
                    </tr>
                    <tr>
                        <td>E02 - Roles y usuarios (panel de control administrativo)</td>
                        <td>30</td>
                        <td>2</td>
                        <td>15</td>
                    </tr>
                </tbody>
            </table>
          </div>
          <br>
          
		</main>
		<Footer />
	</body>
</html>