---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import Entregables from '../../../components/Entregables.astro';
import EntregablesAceptados from '../../../components/EntregablesAceptados.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../../sprint1';
import TablasHistoriasComprometidas from '../../../components/TablasHistoriasComprometidas.astro';

const modeloCanvasUrl = "/modelo-canvas.pdf"
const actaDeConstitucionUrl = "/acta-de-constitucion.pdf"
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.seccion {
        margin-bottom: 3em;
      }
      h2 {
        color: var(--accent);
        text-align: center;
        margin-bottom: 0.5em;
        margin-top: 0.5em;
      }
      h3 {
        margin-top: 1em;
        margin-bottom: 0.5em;
      }
      h1 {
        text-align: center;
        margin-bottom: 1em;
      }
      .personal-container {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
      }
      .personal {
        width: 500px;
        text-align: center;
        padding: 0 1em 0 1em;
      }
      .image-team-member {
        display: flex;
        justify-content: center;
        margin-top: 1em;
      }
      .stakeholders-container {
        display: flex;
        gap: 2em;
        justify-content: center;
      }
      .stakeholders {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-items: center;
        gap: 5px;
      }
        p {
        margin: 0;
        padding: 0;
      }
      
		</style>
	</head>
	<body>
		<Header />
		<main>
      <h1>Demostrar y validar sprint</h1>
      <div class="seccion">
        <hr>
        <h2>Entradas</h2>
        <hr>
        <ol>
          <li>
            <a href="/avance/formar-al-equipo-scrum#scrum-team">Equipo Scrum</a>
          </li> <br>
          <li>
            <Entregables/>
          </li>
          <li>
            <a href="/avance/sprint_1/crear-el-sprint-backlog#sprint-backlog">Sprint Backlog</a>
          </li>
          <li>
            <a href="/avance/crear-el-backlog-priorizado-del-producto#criterios-terminado">Criterios de terminado</a>
          </li>
          <li>
            <a href="/avance/sprint_1/crear-historias-de-usuario#gestion-ordenes">Criterios de aceptacion de historias de usuario</a>
          </li>
        </ol>
      </div>
      <div class="seccion">
        <hr>
        <h2>Herramientas</h2>
        <hr>
        <h3>Reuniones de revision del Sprint</h3>
        <img width={800} height={800} src="" alt="imagen por hacer">
        <br>

        <!-- <Moscow /> -->
      </div>
      <div class="seccion">
        <hr>
        <h2>Salidas</h2>
        <hr>
        <div id="entregables-aceptados">
          <h3>Entregables aceptados</h3>
          <EntregablesAceptados/>
        </div>
        <hr>
        <div id="comprometidas">
          <h3>Tabla de historias de usuarios comprometidas</h3>
          <strong>Estimaciones y Selección</strong>
          <p> El equipo analiza la lista y decide que las siguientes historias son las más relevantes para el próximo sprint, teniendo en cuenta su capacidad de 12 puntos.</p>
          <br>
          <TablasHistoriasComprometidas/>
        </div>
      </div>
		</main>
		<Footer />
	</body>
</html>
