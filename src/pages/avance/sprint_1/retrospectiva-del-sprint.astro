---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import AgreedActionableImprovements from '../../../components/AgreedActionableImprovements.astro';
import EntregablesAceptados from '../../../components/EntregablesAceptados.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../../sprint1';
import TablasHistoriasComprometidas from '../../../components/TablasHistoriasComprometidas.astro';
import TablaHistoriasPorPrioridadYEstimacion from '../../../components/TablaHistoriasPorPrioridadYEstimacion.astro';

const modeloCanvasUrl = "/modelo-canvas.pdf"
const actaDeConstitucionUrl = "/acta-de-constitucion.pdf"
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.seccion {
        margin-bottom: 3em;
      }
      h2 {
        color: var(--accent);
        text-align: center;
        margin-bottom: 0.5em;
        margin-top: 0.5em;
      }
      h3 {
        margin-top: 1em;
        margin-bottom: 0.5em;
      }
      h1 {
        text-align: center;
        margin-bottom: 1em;
      }
      .personal-container {
        display: flex;
        justify-content: space-between;
        margin-top: 2em;
      }
      .personal {
        width: 500px;
        text-align: center;
        padding: 0 1em 0 1em;
      }
      .image-team-member {
        display: flex;
        justify-content: center;
        margin-top: 1em;
      }
      .stakeholders-container {
        display: flex;
        gap: 2em;
        justify-content: center;
      }
      .stakeholders {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-items: center;
        gap: 5px;
      }
        p {
        margin: 0;
        padding: 0;
      }
      
		</style>
	</head>
	<body>
		<Header />
		<main>
      <h1>Comprometer historias de usuario</h1>
      <div class="seccion">
        <hr>
        <h2>Entradas</h2>
        <hr>
        <ol>
          <li>
            <a href="/avance/identificar-al-scrum-master-y-stakeholders#scrum-master">Scrum Master</a>
          </li>
          <li>
            <a href="/avance/formar-al-equipo-scrum#scrum-team">Equipo Scrum</a>        
          </li>
          <li>
            <a href="/avance/sprint_1/demostrar-y-validar-sprint">Demostrar y validar Sprint</a>
          </li>
        </ol>
      </div>
      <div class="seccion">
        <hr>
        <h2>Herramientas</h2>
        <hr>
        <h3>Reuniones de retrospectiva del Sprint</h3>
        <img width={800} height={800} src="" alt="imagen por hacer">
        <br>

        <!-- <Moscow /> -->
      </div>
      <div class="seccion">
        <hr>
        <h2>Salidas</h2>
        <hr>
        <div id="agreed-actionable-improvements">
          <h3>Agreed actionable improvements</h3>
          <AgreedActionableImprovements/>
        </div>
        
      </div>
		</main>
		<Footer />
	</body>
</html>